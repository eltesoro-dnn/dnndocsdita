                    <substep><cmd></cmd></substep>
                    <substep><cmd></cmd></substep>
                </substeps>
            </step>

            <step>
                <cmd><xref format="dita" href="../building-your-site/create-page-via-persona-bar.dita">Create a new page</xref> in which to display the list of recipes with their titles and short description.</cmd>
                <info><image outputclass="img-scr" scalefit="yes" placement="break" align="left" href="../../common/img/xxx.png"><alt>Create the page for the list of recipes.</alt></image></info>
                <substeps>
                    <substep><cmd></cmd></substep>
