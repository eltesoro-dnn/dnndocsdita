            <!-- <step conref="bptext-servers.dita#tsk-bptext-servers/step-clear-cache-button"><cmd/></step> -->
            <step id="step-clear-cache-button">
                <cmd>Click/Tap <uicontrol>Clear Cache</uicontrol>.</cmd>
                <info><image outputclass="img-scr" scalefit="yes" placement="break" align="left" href="../../common/img/scr-Servers-buttons-ClearCache.png"><alt></alt></image></info>
            </step>

            <!-- <step conref="bptext-servers.dita#tsk-bptext-servers/step-restart-application-button"><cmd/></step> -->
            <step id="step-restart-application-button">
                <cmd>Click/Tap <uicontrol>Restart Application</uicontrol>.</cmd>
                <info><image outputclass="img-scr" scalefit="yes" placement="break" align="left" href="../../common/img/scr-Servers-buttons-RestartApplication.png"><alt></alt></image></info>
            </step>

            <!-- <step conref="bptext-servers.dita#tsk-bptext-servers/step-choose-web-request-adapter"><cmd/></step> -->
            <step id="step-choose-web-request-adapter">
                <cmd>Expand the dropdown and choose.</cmd>
                <info><image outputclass="img-scr" scalefit="yes" placement="break" align="left" href="../../common/img/scr-Servers-ServerSettings-WebServers-ServerWebRequestAdapter-E90.png"><alt></alt></image></info>
            </step>

            <!-- <step conref="bptext-servers.dita#tsk-bptext-servers/step-edit-server"><cmd/></step> -->
            <step id="step-edit-server">
                <cmd>Under <uicontrol>Servers</uicontrol>, find the server you want to edit. Click/Tap the pencil icon.</cmd>
                <info>
                    <image outputclass="img-scr" scalefit="yes" placement="break" align="left" href="../../common/img/scr-Servers-ServerSettings-WebServers-EditIcon-E90.png"><alt></alt></image>
                    <note type="tip" conref="bptext-servers.dita#tsk-bptext-servers/tip-filter-server-list"></note>
                </info>
            </step>

            <!-- <step conref="bptext-servers.dita#tsk-bptext-servers/step-edit-server-url"><cmd/></step> -->
            <step id="step-edit-server-url">
                <cmd>Edit the URL.</cmd>
                <substeps>
                    <substep>
                        <cmd>Click/Tap the pencil icon for <uicontrol>URL</uicontrol>.</cmd>
                        <info><image outputclass="img-scr" scalefit="yes" placement="break" align="left" href="../../common/img/scr-Servers-ServerSettings-WebServers-URL-pencil-E90.png"><alt></alt></image></info>
                    </substep>
                    <substep>
                        <cmd>Enter a new URL or modify the existing one.</cmd>
                        <info><image outputclass="img-scr" scalefit="yes" placement="break" align="left" href="../../common/img/scr-Servers-ServerSettings-WebServers-URL-textbox-E90.png"><alt></alt></image></info>
                    </substep>
                    <substep>
                        <cmd>Press <userinput>Enter</userinput>.</cmd>
                    </substep>
                </substeps>
            </step>

            <!-- <step conref="bptext-servers.dita#tsk-bptext-servers/step-edit-server-group"><cmd/></step> -->
            <step id="step-edit-server-group">
                <cmd>Assign the server to a group.</cmd>
                <substeps>
                    <substep>
                        <cmd>Click/Tap the pencil icon for <uicontrol>Server Group</uicontrol>.</cmd>
                        <info><image outputclass="img-scr" scalefit="yes" placement="break" align="left" href="../../common/img/scr-Servers-ServerSettings-WebServers-ServerGroup-pencil-E90.png"><alt></alt></image></info>
                    </substep>
                    <substep>
                        <cmd>Enter the group name.</cmd>
                        <info><image outputclass="img-scr" scalefit="yes" placement="break" align="left" href="../../common/img/scr-Servers-ServerSettings-WebServers-ServerGroup-textbox-E90.png"><alt></alt></image></info>
                    </substep>
                    <substep>
                        <cmd>Press <userinput>Enter</userinput>.</cmd>
                    </substep>
                </substeps>
            </step>

            <!-- <step conref="bptext-servers.dita#tsk-bptext-servers/step-enable-disable-server"><cmd/></step> -->
            <step id="step-enable-disable-server">
                <cmd>Toggle the <uicontrol>Enabled</uicontrol> switch.</cmd>
                <info><image outputclass="img-scr" scalefit="yes" placement="break" align="left" href="../../common/img/scr-Servers-ServerSettings-WebServers-Enabled-toggle-E90.png"><alt></alt></image></info>
            </step>

            <!-- <step conref="bptext-servers.dita#tsk-bptext-servers/step-load-cache-items"><cmd/></step> -->
            <step id="step-load-cache-items">
                <cmd>Click/Tap the <uicontrol>Load Cache Items</uicontrol> link.</cmd>
                <info><image outputclass="img-scr" scalefit="yes" placement="break" align="left" href="../../common/img/scr-Servers-ServerSettings-WebServers-LoadCacheItems-link-E90.png"><alt></alt></image></info>
            </step>

            <!-- <step conref="bptext-servers.dita#tsk-bptext-servers/step-expire-individual-cache-items"><cmd/></step> -->
            <step id="step-expire-individual-cache-items">
                <cmd>Expire individual cache items.</cmd>
                <substeps>
                    <substep>
                        <cmd>Select the cache item from the dropdown.</cmd>
                    </substep>
                    <substep>
                        <cmd>Click/Tap <uicontrol>Expire Cache Item</uicontrol>.</cmd>
                    </substep>
                </substeps>
                <info><image outputclass="img-scr" scalefit="yes" placement="break" align="left" href="../../common/img/scr-Servers-ServerSettings-WebServers-CacheItems.gif"><alt></alt></image></info>
            </step>

            <!-- <step conref="bptext-servers.dita#tsk-bptext-servers/step-delete-server"><cmd/></step> -->
            <step id="step-delete-server">
                <cmd>Under <uicontrol>Servers</uicontrol>, find the server you want to edit. Click/Tap the trash icon.</cmd>
                <info>
                    <image outputclass="img-scr" scalefit="yes" placement="break" align="left" href="../../common/img/scr-Servers-ServerSettings-WebServers-DeleteIcon-E90.png"><alt></alt></image>
                    <note type="tip" conref="bptext-servers.dita#tsk-bptext-servers/tip-filter-server-list"></note>
                </info>
            </step>

