        <steps>
            <step conkeyref="k-bppbar/step-pb-host-Settings-Servers-E91"><cmd/></step>
            <step conkeyref="k-bppbtabs/step-pbtabs-host-Settings-Servers-ServerSettings-SMTPServer-E91"><cmd/></step>
