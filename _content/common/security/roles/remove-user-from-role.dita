<task xml:lang="en" id="top-RemoveUserFromRole">

    <title>Remove User from a Role</title>
    <titlealts>
        <navtitle>Remove User from Role</navtitle>
    </titlealts>


    <prolog>
        <author>wrET,orLY,edET</author>
